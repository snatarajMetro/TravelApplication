
@{
    ViewBag.Title = "Travel Request / Athourization";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div id="main">
    <div id="travelRequestIdSection">
        <span id="travelRequestId">0</span>
        <span id="badgeNumber">0</span>
        <span id="selectedRoleId">0</span>
        <span id="estimatedExpenseId">0</span>
        <span id="signedInUserBadgeNumber">0</span>
        <span id="travelRequestBadgeNumber">0</span>
    </div>
    <div id="signin" class="main signincontainer">
        <div id="inputs" class="main">
            <span class="signin">Sign in</span>
        </div>
        <div class="main label4">
            <span class="signinlabel">Username</span><br />
            <input type="text" width="100" name="txtEmail" id="txtEmail" onkeypress="handleEnterOnSigIn(event)" class="datainputsignin" />
        </div>
        <div class="main label4">
            <span class="signinlabel">Password</span><br />
            <input type="password" width="100" id="txtPassword" name="txtPassword" onkeypress="handleEnterOnSigIn(event)" class="datainputsignin" />
        </div>
        <div id="invaliduser" class="main errorcontainer" style="display:none">
            <div class="dialog">Invalid username and/or password. Please try again.</div>
            <a href="#" class="close-thick" onclick="return closeinvaliduser();"></a>
        </div>
        <div>
            <div class="signinbuttonlogin">
                <input class="btn btn-primary signinbutton" type="button" id="btnSignIn" name="btnSignIn" value="Sign in" onclick="signIn()" /><br />
            </div>
        </div>
    </div>
    <div id="action" class="main actioncontainer4" style="display:none">
        <div id="inputs">
            <span class="username"><b>Hello,</b>&nbsp;</span>
            <span class="" id="userName2"></span>
        </div>
        <div class="main selectrole">
            <span>What would you like to do as a</span>
            <span class="roleName" id="roleName"></span>&nbsp;?
        </div>
        <div id="tabselection" class="main roles">
            <div class="tabbable-line">
                <ul class="nav nav-tabs ">
                    <li id="link1" class="active">
                        <a onclick="settravelrequest()">Travel Request</a>
                    </li>
                    <li id="link2">
                        <a onclick="setreimbursement()">Reimbursement</a>
                    </li>
                </ul>
            </div>
            <div id="tab1content">
                <div class="action" onclick="viewexistingtravelrequests();">
                    <img style="padding:0px;" src="~/Images/View.png" width="30" height="30" />
                    <span onclick="">View existing travel requests</span>
                </div>
                <div class="action" onclick="createnewrequest();">
                    <img style="padding:0px;" src="~/Images/New.png" width="30" height="30" />
                    <span onclick="">Create new travel request</span>
                </div>
            </div>
            <div id="tab2content" style="display:none;">
                <div class="action" onclick="viewapprovedtravelrequests();">
                    <img style="padding:0px;" src="~/Images/View.png" width="30" height="30" />
                    <span>View approved travel requests or </span>
                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Create new reimbursement request</span>
                </div>
                <div class="action" onclick="viewexistingreimbursements();">
                    <img style="padding:0px;" src="~/Images/Reimbursement.png" width="30" height="30" />
                    <span onclick="">View existing reimbursement requests</span>
                </div>
            </div>
        </div>
    </div>
    <div id="signintemplate"
         class="main signincontainer"
         style="display:none">
    </div>
    <div ng-app="travelApp" ng-controller="travelAppCtrl">
        <div id="travelrequesttemplate"
             class="main uploadandsubmitcontainer"
             style="display:none"></div>
        <div id="existingtravelrequeststemplate"
             class="main existingtravelrequestcontainer"
             style="display:none"></div>
        <div id="fileuploadtemplate"
             class="main uploadandsubmitcontainer"
             style="display:none"></div>
        <div id="approvetemplate"
             class="main actioncontainer"
             style="display:none"></div>
        <div id="rejecttemplate"
             class="main actioncontainer"
             style="display:none"></div>
        <div id="travelreimbursementtemplate"
             class="main travelreimbursementcontainer"
             style="display:none"></div>
        <div id="existingtravelreimbursementtemplate"
             class="main existingtravelreimbursementcontainer"
             style="display:none"></div>
        <div id="approvedtravelrequesttemplate"
             class="main approvedtravelrequestcontainer"
             style="display:none"></div>
    </div>
</div>
